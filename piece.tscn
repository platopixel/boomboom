signal hit
signal exited_screen

# Generate a random speed factor, for example, between 0.5 and 2
var MIN_ANIMATION_DURATION = 0.5
var MAX_ANIMATION_DURATION = 2.0

func _ready():
	add_to_group(\"piece\")
	# play animation
	var random_animation_duration = randf_range(MIN_ANIMATION_DURATION, MAX_ANIMATION_DURATION)
	$Polygon2D/AnimationPlayer.speed_scale = random_animation_duration
	$Polygon2D/AnimationPlayer.play(\"flash\")

func _on_body_entered(body):
	emit_signal(\"hit\", body)


func _on_visible_on_screen_notifier_2d_screen_exited():
	emit_signal(\"exited_screen\", self.position.x)
	queue_free()
